<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List of URLs - TinyApp</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>
  <%- include ('partials/_header') %>
    <div class="container">
      <h1>Your short URLs</h1>
      <div class="row mb-2 mt-4 align-items-center">
        <div class="col-4 col-md-4 h5">Short ID</div>
        <div class="col-8 col-md-4 h5">Long URL</div>
        <div class="col-6 col-md-2"></div>
        <div class="col-6 col-md-2"></div>
      </div>
      <% for(const key in urls) { %>
        <div class="align-items-center border-bottom py-3 row">

          <div class="col-4 col-md-4">
            <a href="http://localhost:8080/urls/<%= key %>">
              <%= key %>
            </a>
          </div>
          <div class="col-8 col-md-4">
            (<%= urls[key] %>)
          </div>
          <div class="col-6 col-md-2">
            <a href="http://localhost:8080/urls/<%= key %>" class="btn btn-outline-primary">Edit</a>
          </div>
          <div class="col-6 col-md-2">
            <form method="POST" action="/urls/<%= key %>/delete"><button class="btn btn-warning"
                type="submit">Delete</button></form>
          </div>
        </div>
        <% } %>

    </div>
    <%- include('partials/_footer') %>
</body>

</html>